using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

class Aluno
{

    public string nomeAluno;
    public double nota1;
    public double nota2;
    public double media;
    public double cargaHoraria;
    public double faltas;
    public string status;
    public bool isSemestreFinalizado;


    public Aluno(string nomeAluno)
    {
        this.nomeAluno = nomeAluno;
    }

    public void AtribuirNota1(double nota1)
    {
        this.nota1 = nota1;
    }
    public void AtribuirNota2(double nota2)
    {
        this.nota2 = nota2;
    }

    public void CalcularMedia()
    {
        media = (nota1 + nota2) / 2;
    }
    public void CargaHoraria(double cargaHoraria)
    {
        this.cargaHoraria = cargaHoraria;
    }

    public void AtribuirFalta()
    {
        faltas++;
    }

    public void DecrescerFalta()
    {
        faltas--;
    }
    public void ConferirStatus()
    {
        double limiteFaltas = cargaHoraria * 0.25; // 25% da carga horária

        if (faltas <= limiteFaltas && media >= 7)
        {
            status = "Aprovado";
        }
        else if (faltas > limiteFaltas || media < 3)
        {
            status = "Reprovado";
        }
        else
        {
            status = "Em recuperação";
        }
    }
    public override string ToString()
    {
        return "O aluno" + nomeAluno + " possui" +faltas + " falta(s) e " + " media "
            +media + " e esse aluno esta " + status;
    }



}
